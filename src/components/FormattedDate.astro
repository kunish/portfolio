---
import type { Lang } from '../i18n/ui';

interface Props {
  date: Date;
  lang?: Lang;
}

const { date, lang = 'zh' } = Astro.props;

const locale = lang === 'zh' ? 'zh-CN' : 'en-US';
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString(locale, {
      year: 'numeric',
      month: 'long',
      day: 'numeric',
    })
  }
</time>
