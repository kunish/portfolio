---
import { SOCIAL_LINKS } from '../consts';
import { getLangFromUrl, useTranslations, useTranslatedPath } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

const currentYear = new Date().getFullYear();
---

<footer class="bg-black text-white mt-32">
  <div class="container-swiss py-16 md:py-24">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-12 md:gap-8">
      <!-- Brand -->
      <div class="md:col-span-5">
        <span class="font-display text-2xl font-semibold">{t('site.title')}</span>
        <p class="mt-4 text-white/60 max-w-sm">
          {lang === 'zh'
            ? '专注于创建优雅、高效的用户界面体验。用代码实现设计，让想法变成现实。'
            : 'Focused on creating elegant and efficient user interface experiences. Turning design into code, making ideas reality.'}
        </p>
      </div>

      <!-- Links -->
      <div class="md:col-span-3">
        <h4 class="text-sm uppercase tracking-widest text-white/40 mb-4">
          {lang === 'zh' ? '导航' : 'Navigation'}
        </h4>
        <ul class="space-y-3">
          <li><a href={translatePath('/')} class="text-white/80 hover:text-accent transition-colors">{t('nav.home')}</a></li>
          <li><a href={translatePath('/blog')} class="text-white/80 hover:text-accent transition-colors">{t('nav.blog')}</a></li>
          <li><a href={translatePath('/about')} class="text-white/80 hover:text-accent transition-colors">{t('nav.about')}</a></li>
        </ul>
      </div>

      <!-- Social -->
      <div class="md:col-span-4">
        <h4 class="text-sm uppercase tracking-widest text-white/40 mb-4">
          {lang === 'zh' ? '社交媒体' : 'Social'}
        </h4>
        <div class="flex gap-4">
          <a
            href={SOCIAL_LINKS.github}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 flex items-center justify-center bg-white/10 hover:bg-accent transition-colors"
            aria-label="GitHub"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-16 pt-8 border-t border-white/10 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-white/40 text-sm">
        &copy; {currentYear} {t('site.title')}. {t('footer.rights')}.
      </p>
      <p class="text-white/40 text-sm">
        {t('footer.builtWith')} <a href="https://astro.build" target="_blank" rel="noopener" class="text-accent hover:text-accent-hover">Astro</a>
      </p>
    </div>
  </div>
</footer>
