---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import type { Lang } from '../i18n/ui';
import { useTranslations, useTranslatedPath } from '../i18n/utils';

type Props = CollectionEntry<'blog'>['data'] & {
  lang?: Lang;
};

const { title, description, pubDate, updatedDate, heroImage, lang = 'zh' } = Astro.props;
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<!doctype html>
<html lang={lang === 'zh' ? 'zh-CN' : 'en'}>
  <head>
    <BaseHead title={`${title} - ${t('site.title')}`} description={description} image={heroImage} article={true} publishedTime={pubDate} />
  </head>

  <body>
    <Header />

    <main class="pt-20">
      <!-- Hero Section -->
      <section class="py-16 md:py-24">
        <div class="container-swiss">
          <div class="max-w-4xl">
            <!-- Meta -->
            <div class="flex items-center gap-4 text-text-muted text-sm uppercase tracking-wider mb-6">
              <FormattedDate date={pubDate} lang={lang} />
              {updatedDate && (
                <span class="flex items-center gap-2">
                  <span class="w-1 h-1 bg-text-muted rounded-full"></span>
                  <span>
                    {lang === 'zh' ? '更新于' : 'Updated'} <FormattedDate date={updatedDate} lang={lang} />
                  </span>
                </span>
              )}
            </div>

            <!-- Title -->
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-semibold tracking-tight leading-[1.1]">
              {title}
            </h1>

            <!-- Description -->
            {description && (
              <p class="mt-6 text-xl text-text-secondary leading-relaxed">
                {description}
              </p>
            )}
          </div>
        </div>
      </section>

      <!-- Hero Image -->
      {heroImage && (
        <section class="pb-16">
          <div class="container-swiss">
            <div class="aspect-[21/9] bg-black overflow-hidden">
              <Image
                width={1400}
                height={600}
                src={heroImage}
                alt={title}
                class="w-full h-full object-cover"
              />
            </div>
          </div>
        </section>
      )}

      <!-- Content -->
      <section class="pb-24 md:pb-32">
        <div class="container-swiss">
          <article class="max-w-3xl mx-auto prose-swiss">
            <slot />
          </article>
        </div>
      </section>

      <!-- Back to Blog -->
      <section class="pb-24">
        <div class="container-swiss">
          <div class="max-w-3xl mx-auto">
            <div class="divider pt-12"></div>
            <a
              href={translatePath('/blog')}
              class="inline-flex items-center gap-2 mt-8 text-text-secondary hover:text-accent transition-colors font-medium"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
              </svg>
              {lang === 'zh' ? '返回博客列表' : 'Back to Blog'}
            </a>
          </div>
        </div>
      </section>
    </main>

    <Footer />
  </body>
</html>
